NAME		= replace

#	FILES			############################################################
SRC			= main.cpp

HEADER		= 

OBJ			= ${SRC:.cpp=.o}
################################################################################

#	COMPILATION		############################################################
CC			= clang++
CFLAGS  	= -Wall -Wextra -Werror
RM			= rm -rf
################################################################################

#	RULES	####################################################################
$(NAME):	${OBJ}
			@$(CC) $(CFLAGS) ${OBJ} -o $(NAME)
			@printf "done.\n"

all:		${NAME}

%.o: %.cpp	$(HEADER)
			@$(CC) -c $(CFLAGS) -o $@ $<

re: 		fclean all

clean:
			@${RM} ${OBJ}
			@printf "obj delete.\n"

fclean:		clean files
			@${RM} $(NAME)
			@printf "binary delete.\n"

files:
			@${RM} *.$(NAME)
			@printf "*.replace is deleted\n"

.PHONY: 	all clean fclean re files
#################################################################################